@model Contact

@{
    ViewData["Title"] = "Actualizar Contacto";
}

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-warning">
                <h3 class="text-center text-white">Actualizar Contacto</h3>
            </div>
            <div class="card-body">
                <form asp-action="Update" method="post">

                    <input type="hidden" asp-for="Id"/>

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" placeholder="Ingrese el nombre" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input type="tel" asp-for="PhoneNumber" placeholder="Ingresa el número de teléfono" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input type="email" asp-for="Email" placeholder="Ingrese el correo Electrónico" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="container text-center">
                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary d-block mx-auto">
                                <i class="fa-solid fa-floppy-disk"></i> Guardar
                            </button>
                        </div>

                        <div class="form-group mt-3">
                            <a asp-action="Read" asp-controller="Contact" class="btn btn-secondary">
                                <i class="fa-solid fa-arrow-rotate-left"></i> Volver
                            </a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>